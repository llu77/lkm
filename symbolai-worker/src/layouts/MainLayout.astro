---
import '../styles/globals.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'نظام إدارة مالية - SymbolAI',
  description = 'نظام متكامل لإدارة المالية والموارد البشرية'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <div class="min-h-screen bg-background">
    <!-- Header/Navigation -->
    <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container flex h-14 items-center">
        <div class="mr-4 flex">
          <a href="/dashboard" class="mr-6 flex items-center space-x-2">
            <span class="font-bold">SymbolAI المالية</span>
          </a>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href="/dashboard" class="transition-colors hover:text-foreground/80 text-foreground">لوحة التحكم</a>
            <a href="/revenues" class="transition-colors hover:text-foreground/80 text-foreground/60">الإيرادات</a>
            <a href="/expenses" class="transition-colors hover:text-foreground/80 text-foreground/60">المصروفات</a>
            <a href="/employees" class="transition-colors hover:text-foreground/80 text-foreground/60">الموظفين</a>
            <a href="/bonus" class="transition-colors hover:text-foreground/80 text-foreground/60">البونص</a>
            <a href="/payroll" class="transition-colors hover:text-foreground/80 text-foreground/60">الرواتب</a>
            <a href="/employee-requests" class="transition-colors hover:text-foreground/80 text-foreground/60">الطلبات</a>
            <a href="/product-orders" class="transition-colors hover:text-foreground/80 text-foreground/60">الطلبيات</a>
            <a href="/backups" class="transition-colors hover:text-foreground/80 text-foreground/60">النسخ الاحتياطي</a>
            <a href="/ai-assistant" class="transition-colors hover:text-foreground/80 text-foreground/60">المساعد الذكي</a>
          </nav>
        </div>
        <div class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
          <div class="w-full flex-1 md:w-auto md:flex-none">
            <!-- User menu will go here -->
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto py-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t py-6 md:py-0">
      <div class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row">
        <p class="text-center text-sm leading-loose text-muted-foreground md:text-right">
          بُني بواسطة <span class="font-medium">SymbolAI</span>. نظام إدارة مالية متكامل على Cloudflare.
        </p>
      </div>
    </footer>
  </div>
</body>
</html>
